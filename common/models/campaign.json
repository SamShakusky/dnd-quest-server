{
  "name": "Campaign",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "strictObjectIDCoercion": true,
    "mongodb": {
      "collection": "Campaign",
      "allowExtendedOperators": true
    }
  },
  "properties": {
    "title": {
      "type": "string",
      "required": true
    },
    "members": {
      "type": "array",
      "default" : []
    },
    "limit": {
      "type": "number",
      "default": 10
    }
  },
  "validations": [],
  "relations": {
    "adventurer": {
      "type": "belongsTo",
      "model": "Adventurer",
      "foreignKey": "ownerId"
    },
    "quests": {
      "type": "hasMany",
      "model": "Quest",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "self",
      "permission": "ALLOW",
      "property": "membership"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "teamMember",
      "permission": "ALLOW",
      "property": "changes"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "teamMember",
      "permission": "ALLOW",
      "property": "addQuest"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "teamMember",
      "permission": "ALLOW",
      "property": "findById"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "teamMember",
      "permission": "ALLOW",
      "property": "__create__quests"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "teamMember",
      "permission": "ALLOW",
      "property": "__get__quests"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "teamMember",
      "permission": "ALLOW",
      "property": "__updateById__quests"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "teamMember",
      "permission": "ALLOW",
      "property": "__destroyById__quests"
    }
  ],
  "methods": {}
}
